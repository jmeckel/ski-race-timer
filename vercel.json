{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(self), microphone=(self), camera=(self)"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: blob:; connect-src 'self' https://*.vercel.app wss://*.vercel.app; font-src 'self' https://fonts.gstatic.com; media-src 'self' blob:; worker-src 'self'"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/sync",
      "destination": "/api/v1/sync"
    },
    {
      "source": "/api/faults",
      "destination": "/api/v1/faults"
    },
    {
      "source": "/api/auth/token",
      "destination": "/api/v1/auth/token"
    },
    {
      "source": "/api/admin/pin",
      "destination": "/api/v1/admin/pin"
    },
    {
      "source": "/api/admin/races",
      "destination": "/api/v1/admin/races"
    },
    {
      "source": "/api/admin/reset-pin",
      "destination": "/api/v1/admin/reset-pin"
    }
  ]
}
